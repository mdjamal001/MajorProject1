<% layout("/layouts/boilerplate.ejs") %>
  <div class="row">
    <div class="col-md-6 offset-md-3 col-10 offset-1">
      <h1 class="mt-2">Create New Listing</h1>
      <form action="/listings" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
        <div>
          <label for="title" class="form-label">Title:</label>
          <input type="text" name="title" class="form-control mb-1" placeholder="Enter title" required />
          <div class="invalid-feedback">Title required</div>
        </div>

        <div>
          <label for="description" class="form-label">Description:</label>
          <textarea name="description" id="description" class="form-control mb-1" placeholder="Tell about the property"
            rows="3" required></textarea>
          <div class="invalid-feedback">Description required</div>
        </div>

        <div>
          <label for="price" class="form-label">Price:</label>
          <input type="number" name="price" class="form-control mb-1" placeholder="Enter price per night" required />
          <div class="invalid-feedback">Price required</div>
        </div>

        <div>
          <label for="image" class="form-label">Image:</label>
          <input type="file" name="image" id="image" class="form-control mb-1" placeholder="Enter Image URL/link"
            value="" />
        </div>

        <div>
          <label for="city" class="form-label">City:</label>
          <input type="text" name="city" class="form-control mb-1" required />
          <div class="invalid-feedback">City required</div>
        </div>

        <div>
          <label for="country" class="form-label">Country:</label>
          <input type="text" name="country" class="form-control mb-1" required />
          <div class="invalid-feedback">Country required</div>
        </div>

        <br />
        <button class="btn btn-danger">Create</button>
        <br /><br />
      </form>
    </div>
  </div>